<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                            <label id="atk"/>
                            <label id="cd"/>
                            <label id="hp"/>
                            <label id="def"/>
                            <label id="lvl"/>
                            <button id="pickup">
                                <text>Extract</text>
                            </button>
                            <button id="level up">
                                <text>level up</text>
                            </button>
                            <button id="details">
                                <text>details</text>
                            </button>

                    </children>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>
            <surface>
                <panel/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>